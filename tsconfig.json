{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true
  },
  "types": ["node", "blessed"],
  "typeRoots": [
      "./node_modules/@types",
      "./types"
  ],
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}